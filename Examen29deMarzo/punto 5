        if (num3 > 0){
            cout << "el num es positivo" << endl;
        } else if (num == 0) {
            cout << "el num es igual a 0" << endl;
        }else cout << "el num es negativo" << endl;
        }
else if(num==3){ cout<<"ingrese un nombre"<<endl;
    int nombre;
