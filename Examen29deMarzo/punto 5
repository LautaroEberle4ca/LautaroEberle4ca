            cout << " el numero ingresado no es par y mayor a 100" << endl;
        }
        else if (num1 == 100 && num1 %2==0) {
            cout << " el numero ingresado  es par y es igual a 100" << endl;
        }
        else
            cout << " el numero ingresado no es par y es menor a 100" << endl;}
        else if (num == 2) {
        cout << "ingrese un numero" << endl;
